<%= render 'shared/merchant_nav' %>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Invoice ID</th>
      <th>Status</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= link_to invoice.id, merchant_invoice_path(@merchant, invoice) %></td>
        <td><%= invoice.status %></td>
        <td><%= format_date(invoice.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


