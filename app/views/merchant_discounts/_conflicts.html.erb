<h2>Conflicting Discounts</h2>

<table>
  <thead>
    <tr>
      <th>Merchant ID</th>
      <th>Discount ID</th>
      <th>Name</th>
      <th>Percent Off</th>
      <th>Quantity Threshold</th>
      <th>Holiday Date (if applicable)</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @conflicting_discounts.each do |discount| %>
      <tr id="<%= discount.id %>">
        <td id="<%= discount.id %>-merchant_id"><%= discount.merchant_id %></td>
        <td id="<%= discount.id %>-id"><%= discount.id %></td>
        <td id="<%= discount.id %>-name"><%= discount.name %></td>
        <td id="<%= discount.id %>-percent"><%= discount.percent %>%</td>
        <td id="<%= discount.id %>-qty"><%= discount.qty_threshold %></td>
        <td id="<%= discount.id %>-holiday"><%= convert_and_format_date(discount.holiday_date) %></td>
        <td id="<%= discount.id %>-view"><%= link_to 'View Discount', merchant_discount_path(@merchant, discount.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>