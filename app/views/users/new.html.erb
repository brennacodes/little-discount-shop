<%= form_with url: login_url do |form| %>
<div class="container col-6">
    <% @user.errors.full_messages_for(:subject).each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>

    <div class="input-group py-2">
        <%= form.label :username, { class: "input-group-text" } %><br>
        <%= form.text_field :username, { class: "form-control", id: "text-input-area", required: true } %></p>
    </div>

    <div class="input-group py-2">
        <%= form.label :email, { class: "input-group-text" } %><br>
        <%= form.text_field :email, { class: "form-control", id: "text-input-area", required: true } %></p>
    </div>

    <div class="input-group py-2">
        <%= form.label :password, { class: "input-group-text" } %><br>
        <%= form.text_field :password, { class: "form-control", id: "text-input-area", type: "password", required: true } %></p>
    </div>

    <div class="input-group py-2 pb-3">
        <%= form.label :password_confirmation, { class: "input-group-text" } %><br>
        <%= form.text_field :password_confirmation, { class: "form-control", id: "text-input-area", type: "password", required: true } %></p>
    </div>

    <div class="position-relative pt-1">
    <%= form.submit "Create Account", type: :submit, class: "btn btn-primary position-absolute top-50 start-0" %>

    <%= link_to "Click here to Login Instead", login_path, class: "position-absolute top-70 end-0" %></div>
</div>
<% end %>